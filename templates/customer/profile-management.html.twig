{% extends 'base.html.twig' %}
{% block title %}Customer Portal{% endblock %}

{% block header %}
        {% include 'includes/header_with_logo.html.twig' %}
{% endblock %}

{% block content %}

<div class="d-flex justify-content-center">
    <div class="d-flex flex-column mb-5">
    </div>
</div>


    <div class="d-flex justify-content-center">
        <div class="d-flex flex-column">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(userForm) }}
                {{ form_row(userForm.email) }}
                {{ form_row(userForm.phone) }}

            <div class="row justify-content-center ms-1 me-1">
                <button type="submit" class="btn btn-success mb-2">Update!</button>
                <a href="{{ path('customer_index') }}" class="link-secondary pt-2 text-center">Return To Customer Home</a>
            </div>
            {{ form_end(userForm) }}

        </div>
    </div>


{% endblock %}
