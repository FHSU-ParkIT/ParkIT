{% extends 'base.html.twig' %}
{# For rapid development: we're using the bootstrap template form theme #}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block headerText %}
    {{headerTitle}}
{% endblock %}


{% block content %}
			<div class="container d-flex flex-column align-items-center">
				<!-- Content -->

                <!-- User Sign Up Form -->
                {# We can get more detailed with the styles for the form, but to start with we're using the form_theme and a quick form #}
                {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}
                    <div class="row justify-content-center ms-1 me-1">
                        <button class="btn btn-success btn-lg" type="submit">Register!</button>
                    </div>
                {{ form_end(form) }}
				<!-- End of Content -->
				<a href="{{ path('home') }}" class="link-secondary pt-2">Return To Home</a>
			</div>

{% endblock %}